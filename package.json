{
  "name": "cory",
  "version": "2.0.0",
  "description": "Minimal generator for static sites",
  "files": [
    "template",
    "dist"
  ],
  "scripts": {
    "start": "gulp",
    "prepublish": "gulp transpile",
    "pretest": "gulp transpile",
    "test": "xo && ava"
  },
  "author": "leo",
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "repository": "leo/cory",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "keywords": [
    "static",
    "site",
    "generator",
    "jekyll",
    "content",
    "website"
  ],
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "ava/no-ignored-test-files": 0
    }
  },
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "cory": "dist/bin/index",
    "cory-serve": "dist/bin/serve",
    "cory-build": "dist/bin/build",
    "cory-init": "dist/bin/init",
    "cory-clean": "dist/bin/clean"
  },
  "bugs": {
    "url": "https://github.com/leo/cory/issues"
  },
  "homepage": "https://github.com/leo/cory#readme",
  "dependencies": {
    "args": "^1.3.1",
    "broccoli": "^0.16.9",
    "broccoli-sane-watcher": "^1.1.4",
    "browser-sync": "^2.13.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "front-matter": "^2.1.0",
    "fs-extra": "^0.30.0",
    "handlebars": "^4.0.5",
    "markdown": "^0.5.0",
    "mime": "^1.3.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "open": "0.0.5",
    "ora": "^0.2.3",
    "update-notifier": "^1.0.2",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "ava": "^0.15.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.0",
    "gulp-ext": "^1.0.0",
    "xo": "^0.16.0"
  }
}
